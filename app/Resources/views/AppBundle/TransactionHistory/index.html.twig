{% extends ":AppBundle:layout.html.twig" %}

{% block title %}AppBundle:TransactionHistory:index{% endblock %}

{% block content %}
    <!-- Content-->
    <div class="content-block">

        {% if transactions|length %}

             <!-- Col content-->
            <div class="content content-lg">
                <section class="panel panel-history">
                    <h2 class="panel-title">{{ 'panel-history.title'| trans }}</h2>
                    <div class="panel-body history-table">
                        <div class="history-row history-row-head">
                            <div class="history-cell">{{ 'panel-history.table_date'| trans }}</div>
                            <div class="history-cell">{{ 'panel-history.table_desc'| trans }}</div>
                            <!-- <div class="history-cell">{{ 'panel-history.table_status'| trans }}</div> -->
                            <div class="history-cell">{{ 'panel-history.table_amount'| trans }}</div>
                        </div>

                        {% for key, transaction in transactions %}
                            <div class="history-row">
                                <div class="history-cell cell-date">{{ transaction.createdAt.date|date("m/d/Y") }}</div>
                                <div class="history-cell cell-desc">{{ transaction.info }}</div>
                                <!-- <div class="history-cell cell-status expired"></div> -->
                                <div class="history-cell cell-amount">{{ transaction.amount }}</div>
                            </div>
