                            <br>{{ 'panel-history.empty_desc_end'| trans }}</div>
                        <button class="btn blue open-popup" data-name="invest">{{ 'panel-history.btn'| trans }}</button>
                    </div>
                </section>
            </div>

        {% endif %}

        <!-- Col content-->
        <div class="content content-lg">
            <!-- Footer-->
            <footer class="main-footer">
                <p class="copyright">{{ 'footer.copyright'| trans }}</p>
                <p class="feedback">{{ 'footer.feedback'| trans }}</p>
            </footer>
