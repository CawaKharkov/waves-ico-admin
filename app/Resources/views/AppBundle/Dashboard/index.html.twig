{% extends ":AppBundle:layout.html.twig" %}

{% block content %}

    <!-- Content-->
    <div class="content-block">

        <!-- Col content-->
        <div class="content content-md">

            <!-- Center content-->
            <div class="content content-center">
                <!-- Invest panel-->
                <section class="panel panel-invest">
                    <h2 class="panel-title">{{ 'panel_invest.title'| trans }}</h2>
                    <div class="panel-body">
                        <div class="invest-action">
                            <!-- Zeroline-->
                            <div class="invest-line">
                                <div class="col-desc">{{ 'panel_invest.address'| trans }}
                                    <div class="tooltip tooltip-waves">
                                        <div class="tooltip-call gray"></div>
                                        <div class="tooltip-content">{{ 'tooltip.waves'| trans }} <a href="https://waveswallet.io/" target="_blank" class="link">https://waveswallet.io/</a>.</div>
                                    </div>
                                </div>
                                <div class="col-action">
                                    <div class="waves-views">
                                        {% if app.user.wallet %}
                                           {{ app.user.wallet.address }}
                                        {% else %}
                                            aдрес wawes
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <!-- Oneline-->
                            <div class="invest-line indent">
                                <div class="col-desc">{{ 'panel_invest.currency'| trans }}</div>
                                <div class="col-action">
                                    <div class="dropdown-block">
                                        <div class="invest-field select-currency" data-toggle="dropdown">
                                            <div class="currency">USD</div><span class="arrow"></span>
                                        </div>
                                        <ul class="dropdown-menu drop-menu-currency" data-toggle="dropdown-menu">
                                            <li class="drop-item curr-item">USD</li>
                                            <li class="drop-item curr-item">EURO</li>
                                            <li class="drop-item curr-item">BTC</li>
                                            <li class="drop-item curr-item">WAVES</li>
                                            <li class="drop-item curr-item">ETH</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- Twoline-->
                            <div class="invest-line indent">
                                <div class="col-desc">{{ 'panel_invest.amount'| trans }}</div>
                                <div class="col-action">
                                    <div class="input-amount-wrap">
                                        <input class="invest-field input-amount" type="text" value="0" placeholder="{{ 'panel_invest.amount'| trans }}">
                                        <div class="action-amount">
                                            <span class="plus">+</span>
                                            <span class="minus">-</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Threeline-->
                            <div class="invest-line indent">
                                <div class="col-desc"></div>
                                <div class="col-action">
                                    <button class="btn btn-block blue open-popup" data-name="invest">
                                        {{ 'panel_invest.btn'| trans }}
                                    </button>
                                    <button class="get">GET REQUEST</button>
                                </div>
                            </div>
                            <!-- Fourline-->
                            <div class="invest-line">
                                <div class="col-desc"></div>
                                <div class="col-action">
                                    <!-- Result-->
                                    <div class="invest-result">
                                        <ul class="result-list">
                                            <li class="result-item">{{ 'panel_invest.result_amount'| trans }} (BNR): 0 BNR</li>
                                            <li class="result-item">{{ 'panel_invest.result_bonus'| trans }} (BNR): 0 BNR</li>
                                            <li class="result-item">{{ 'panel_invest.result_get'| trans }} (BNR): 0 BNR</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <!-- Right aside-->
            <aside class="aside-right">
                <div class="panel-mini statistics">
                    <div class="line">{{ 'aside_right.day'| trans }}:<span>{{ investments_management.getDaysBeforeEnd }}</span></div>
                    <div class="line">{{ 'aside_right.bonus'| trans }}:<span>25%</span>
                        <div class="tooltip tooltip-bonus">
                            <div class="tooltip-call black"></div>
                            <div class="tooltip-content">{{ 'tooltip.bonus'| trans }}</div>
                        </div>
                    </div>
                </div>
                <section class="panel panel-status">
                    <div class="panel-title">{{ 'aside_right.status'| trans }}</div>
                    <div class="panel-body status-body">
                        <div class="invested-all">
                            <div class="title">{{ 'aside_right.invested'| trans }}</div>
                            <ul class="currency-list">
                                <li class="currency-item bnr">0 BTC</li>
                                <li class="currency-item usd">0 USD</li>
                            </ul>
                        </div>
                        <div class="members">
                            <div class="title">{{ 'aside_right.members'| trans }}</div><span class="count">{{ userCount }}</span>
                        </div>
                    </div>
                </section>
            </aside>
        </div>

        <!-- Col content-->
        <div class="content content-md">

            <!-- Invested panel-->
            <section class="panel panel-invested">
                <h2 class="panel-title">{{ 'panel_invested.title'| trans }}</h2>
                <div class="panel-body">
                    <ul class="currency-list">
                        <li class="currency-item usd"><i class="icon"></i>
                            <div class="amount">0</div>
                            <div class="currency">USD</div>
                        </li>
                        <li class="currency-item euro"><i class="icon"></i>
                            <div class="amount">0</div>
                            <div class="currency">EURO</div>
                        </li>
                        <li class="currency-item btc"><i class="icon"></i>
                            <div class="amount">0</div>
                            <div class="currency">BTC</div>
                        </li>
                        <li class="currency-item waves"><i class="icon"></i>
                            <div class="amount">0</div>
                            <div class="currency">WAVES</div>
                        </li>
                        <li class="currency-item eth"><i class="icon"></i>
                            <div class="amount">0</div>
                            <div class="currency">ETH</div>
                        </li>
                    </ul>
                </div>
            </section>

            <!-- Bonus panel-->
            <section class="panel panel-bonus">
                <h2 class="panel-title">{{ 'panel_bonus.title'| trans }}</h2>
                <div class="panel-body">
                    <div class="bonus-item">
                        <div class="percent">25%</div>
                        <div class="empty-scale">
                            <div class="part-scale full-scale"></div>
                        </div>
                        <div class="time">{{ 'panel_bonus.day'| trans }} 1-2</div>
                    </div>
                    <div class="bonus-item">
                        <div class="percent">20%</div>
                        <div class="empty-scale">
                            <div class="part-scale full-scale"></div>
                        </div>
                        <div class="time">{{ 'panel_bonus.day'| trans }} 3-5</div>
                    </div>
                    <div class="bonus-item">
                        <div class="percent">15%</div>
                        <div class="empty-scale">
                            <div class="part-scale full-scale"></div>
                        </div>
                        <div class="time">{{ 'panel_bonus.day'| trans }} 6-8</div>
                    </div>
                    <div class="bonus-item">
                        <div class="percent">10%</div>
                        <div class="empty-scale">
                            <div class="part-scale part-scale-20"></div>
                        </div>
                        <div class="time">{{ 'panel_bonus.day'| trans }} 9-12</div>
                    </div>
                    <div class="bonus-item">
                        <div class="percent">5%</div>
                        <div class="empty-scale"></div>
                        <div class="time">{{ 'panel_bonus.day'| trans }} 13-17</div>
                    </div>
                    <div class="bonus-item">
                        <div class="percent">0%</div>
                        <div class="empty-scale"></div>
                        <div class="time">{{ 'panel_bonus.day'| trans }} 18-25</div>
                    </div>
                </div>
            </section>

            <!-- Course panel-->
            <section class="panel panel-course">
                <h2 class="panel-title">{{ 'panel_course.title'| trans }}</h2>
                <div class="panel-body">
                    <div class="course-tip">BNR {{ 'panel_course.price'| trans }}</div>
                    <div class="panel-course-wrap">

                        <ul class="course-list">
                            {% for key, value in rates %}
                                <li class="course-item {{key|lower}}">
                                    <span class="icon"></span>
                                    <span class="currency">{{key}}</span>
                                    <span class="amount">{{value| number_format(4)}}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </section>
        </div>

        <!-- Col content-->
        <div class="content content-md">
            <!-- Footer-->
            <footer class="main-footer">
                <p class="copyright">{{ 'footer.copyright'| trans }}</p>
                <p class="feedback">{{ 'footer.feedback'| trans }}</p>
            </footer>
        </div>
    </div>

    <!-- Overlay waves-->
    <!-- <div class="overlay waves-overlay"></div> -->

{% endblock content %}


